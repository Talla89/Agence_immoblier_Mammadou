{% extends 'base.html.twig' %}
{% block title %}Inscription
{% endblock %}
{% block body %}
	<div class="container">
		<div class="row">
			<div class="col-md-10 ml-md-auto">
				<div class="card bg-light mb-3 mt-5" style="width: 800px">
					<div class="card-body">
						<div class="card-header mb-3">Registration Form</div>

						<div class="form_group">
							<div class="col-md-12 mb-3">
								<label for="name">Name</label>
								<input id="name" class="form-control" type="text" name="" placeholder="Entrer votre nom">
							</div>
						</div>
						<div class="form_group">
							<div class="col-md-12 mb-3">
								<label for="mail">Mail</label>
								<input id="mail" class="form-control" type="text" name="" placeholder="Entrer votre mail">
							</div>
						</div>
						<div class="form_group">
							<div class="col-md-12 mb-3">
								<label for="password">Mot de passe</label>
								<input id="password" class="form-control" type="text" name="" placeholder="Entrer votre mot de passe">
							</div>
						</div>
						<div class="form_group">
							<div class="col-md-12 mb-3">
								<label for="password">Confirmation du mot de passe</label>
								<input id="password" class="form-control" type="text" name="" placeholder="Entrer votre mot de passe">
							</div>
						</div>
						<div class="form-group">
							<div class="col-md-8 col-md-offset-4" style="margin-top:5px;">
								<button type="submit" class="btn btn-primary">
									<i class="fa fa-btn fa-user"></i>
									Inscription
								</button>
							</div>
						</div>

					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
